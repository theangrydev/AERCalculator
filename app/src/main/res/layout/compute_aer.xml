<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <include
        android:id="@+id/value_today"
        layout="@layout/value_today"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aer_result"
        android:text="@string/unknown_aer"
        android:layout_below="@+id/value_today"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/compute_aer"
        android:text="@string/compute_aer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="computeAER"
        android:layout_below="@+id/aer_result"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:elevation="0dp"/>
</RelativeLayout>