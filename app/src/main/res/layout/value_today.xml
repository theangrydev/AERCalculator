<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="@string/today"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/label_today"
        android:layout_weight="0.5"/>

    <io.github.theangrydev.aercalculator.TodayButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/today_button"
        android:layout_weight="1"
        android:onClick="showTodayDatePicker"/>

    <TextView
        android:id="@+id/label_value_today"
        android:labelFor="@+id/input_value_today"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/value"/>

    <EditText
        android:id="@+id/input_value_today"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="numberDecimal"/>

</LinearLayout>