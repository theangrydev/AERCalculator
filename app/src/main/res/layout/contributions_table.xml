<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:text="@string/contributions_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contributions_header_text"
        android:textAlignment="center"
        android:fontFamily="sans-serif"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contributions_table"
        android:stretchColumns="*"
        android:layout_below="@+id/contributions_header_text">

        <include android:id="@+id/input_contribution" layout="@layout/contribution"/>
    </TableLayout>

    <Button
        android:text="@string/add_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_more_button"
        android:layout_below="@+id/contributions_table"
        android:onClick="addContribution"/>


</RelativeLayout>